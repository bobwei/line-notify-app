{
  "name": "react-app-boilerplate",
  "version": "2.4.0",
  "author": "Bob Wei <bob61016@gmail.com>",
  "description": "A base skeleton template for react and webpack",
  "license": "MIT",
  "scripts": {
    "start": "npm run clean && npm run build:dll && webpack --config webpack/webpack.config.server.babel.js && node server/index.js",
    "start:fast": "webpack --config webpack/webpack.config.server.babel.js && node server/index.js",
    "build": "npm run clean && npm run copy && npm run build:dll && npm run build:server && npm run build:client && ./scripts/build.jsx > build/client/index.html",
    "build:server": "webpack -p --config webpack/webpack.config.server.babel.js",
    "build:client": "webpack -p --config webpack/webpack.config.prod.babel.js",
    "build:dll": "webpack --config webpack/webpack.config.dll.babel.js",
    "server": "node server/index.js",
    "copy": "copyfiles -f ./src/favicon.ico ./build/client",
    "clean": "rimraf build/*",
    "precommit": "lint-staged --verbose",
    "format": "prettier --single-quote --trailing-comma all '{scripts,server,src,webpack,__{tests,mocks}__}/**/*.{js,jsx}' --write",
    "lint-staged": "lint-staged --verbose",
    "test": "jest --onlyChanged --watch",
    "test:all": "jest",
    "deploy:gh-pages": "gh-pages -d build/client",
    "heroku-postbuild": "npm run build"
  },
  "devDependencies": {
    "autoprefixer": "^7.1.2",
    "babel-cli": "^6.24.1",
    "babel-eslint": "^7.2.3",
    "babel-jest": "^20.0.3",
    "babel-loader": "^7.1.1",
    "babel-plugin-module-resolver": "^2.7.1",
    "babel-plugin-transform-object-rest-spread": "^6.23.0",
    "babel-polyfill": "^6.23.0",
    "babel-preset-env": "^1.6.0",
    "babel-preset-latest": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "bower-webpack-plugin": "^0.1.9",
    "chai": "^4.1.0",
    "copyfiles": "^1.2.0",
    "css-loader": "^0.28.4",
    "eslint": "^4.3.0",
    "eslint-config-airbnb": "^15.1.0",
    "eslint-config-prettier": "^2.3.0",
    "eslint-import-resolver-babel-module": "^3.0.0",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-jsx-a11y": "v5.1.1",
    "eslint-plugin-react": "^7.1.0",
    "extract-text-webpack-plugin": "^3.0.0",
    "file-loader": "^0.11.2",
    "gh-pages": "^1.0.0",
    "glob": "^7.1.2",
    "husky": "^0.14.3",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^20.0.4",
    "json-loader": "^0.5.7",
    "lint-staged": "^4.0.2",
    "minimist": "^1.2.0",
    "node-sass": "^4.5.3",
    "null-loader": "^0.1.1",
    "postcss": "^6.0.8",
    "postcss-loader": "^2.0.6",
    "prettier": "^1.5.3",
    "proxy-middleware": "^0.15.0",
    "react-addons-test-utils": "^15.6.0",
    "react-hot-loader": "v3.0.0-beta.6",
    "react-test-renderer": "^15.6.1",
    "rimraf": "^2.6.1",
    "sass-loader": "^6.0.6",
    "style-loader": "^0.18.2",
    "url-loader": "^0.5.9",
    "webpack": "^3.4.1",
    "webpack-dev-middleware": "^1.12.0",
    "webpack-hot-middleware": "^2.18.2",
    "webpack-node-externals": "^1.6.0"
  },
  "dependencies": {
    "axios": "^0.16.2",
    "babel-core": "^6.25.0",
    "bootstrap-sass": "^3.3.6",
    "classnames": "^2.2.5",
    "compression": "^1.7.0",
    "core-js": "^2.0.0",
    "dotenv": "^4.0.0",
    "express": "^4.15.3",
    "fbjs": "^0.8.12",
    "font-awesome": "^4.7.0",
    "js-app-modules": "^1.0.1",
    "lodash": "^4.17.4",
    "normalize.css": "^7.0.0",
    "normalizr": "^3.2.3",
    "prop-types": "^15.5.10",
    "query-string": "^5.0.0",
    "ramda": "^0.24.1",
    "react": "^15.6.1",
    "react-bootstrap": "^0.31.2",
    "react-dom": "^15.6.1",
    "react-flexbox-grid": "^1.1.3",
    "react-redux": "^5.0.5",
    "react-router": "^4.1.2",
    "react-router-bootstrap": "^0.24.2",
    "react-router-dom": "^4.1.2",
    "recompose": "^0.24.0",
    "redux": "^3.7.2",
    "redux-actions": "^2.2.1",
    "redux-form": "^7.0.3",
    "redux-modular-auth": "^1.5.0",
    "redux-modular-models": "^1.6.0",
    "redux-persist": "^4.8.3",
    "redux-thunk": "^2.1.0",
    "reselect": "^3.0.1"
  },
  "jest": {
    "roots": [
      "<rootDir>/src"
    ],
    "testEnvironment": "node",
    "verbose": true,
    "testPathIgnorePatterns": [
      "<rootDir>/__tests__/env-setup.js",
      "<rootDir>/node_modules/"
    ],
    "setupTestFrameworkScriptFile": "<rootDir>/__tests__/env-setup.js",
    "moduleNameMapper": {
      "^.+\\.(css|scss)$": "identity-obj-proxy",
      "^.+\\.(ico|jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/src/__mocks__/fileMock.js"
    }
  },
  "lint-staged": {
    "*.{js,jsx}": [
      "yarn run format",
      "git add"
    ]
  }
}
