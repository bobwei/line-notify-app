{
  "name": "react-app-boilerplate",
  "version": "1.0.0",
  "author": "Bob Wei <bob61016@gmail.com>",
  "description": "A base skeleton template for react and webpack",
  "license": "MIT",
  "scripts": {
    "start": "npm run clean && webpack --config webpack/webpack.config.server.babel.js && node server/index.js",
    "build": "npm run clean && npm run copy && npm run build:server && npm run build:client && ./scripts/build.jsx > build/client/index.html",
    "build:server": "webpack -p --config webpack/webpack.config.server.babel.js",
    "build:client": "webpack -p --config webpack/webpack.config.prod.babel.js",
    "server": "node server/index.js",
    "copy": "copyfiles -f ./src/favicon.ico ./build/client",
    "clean": "rimraf build/*",
    "precommit": "lint-staged --verbose",
    "format": "prettier --single-quote --trailing-comma all '{scripts,server,src,webpack,__{tests,mocks}__}/**/*.js' --write",
    "lint-staged": "lint-staged --verbose",
    "test": "jest --onlyChanged --watch",
    "test:all": "jest",
    "deploy:gh-pages": "gh-pages -d build/client",
    "heroku-postbuild": "npm run build"
  },
  "devDependencies": {
    "autoprefixer": "^6.5.3",
    "babel-cli": "^6.24.1",
    "babel-eslint": "^7.2.3",
    "babel-jest": "^20.0.3",
    "babel-loader": "^7.1.1",
    "babel-plugin-module-resolver": "^2.7.1",
    "babel-plugin-transform-object-rest-spread": "^6.23.0",
    "babel-polyfill": "^6.23.0",
    "babel-preset-env": "^1.6.0",
    "babel-preset-latest": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "bower-webpack-plugin": "^0.1.9",
    "chai": "^3.2.0",
    "copyfiles": "^1.0.0",
    "css-loader": "^0.26.0",
    "eslint": "^4.3.0",
    "eslint-config-airbnb": "^15.1.0",
    "eslint-config-prettier": "^2.3.0",
    "eslint-import-resolver-babel-module": "^3.0.0",
    "eslint-loader": "^1.9.0",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-jsx-a11y": "v5.1.1",
    "eslint-plugin-react": "^7.1.0",
    "extract-text-webpack-plugin": "v2.1.0",
    "file-loader": "^0.9.0",
    "gh-pages": "^0.12.0",
    "glob": "^7.0.0",
    "husky": "^0.14.3",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^20.0.4",
    "json-loader": "^0.5.4",
    "lint-staged": "^4.0.2",
    "minimist": "^1.2.0",
    "node-sass": "^4.5.3",
    "null-loader": "^0.1.1",
    "postcss": "^5.0.21",
    "postcss-loader": "^1.1.1",
    "prettier": "^1.5.3",
    "proxy-middleware": "^0.15.0",
    "react-addons-test-utils": "^15.0.0",
    "react-hot-loader": "v3.0.0-beta.6",
    "react-test-renderer": "^15.4.1",
    "rimraf": "^2.4.3",
    "sass-loader": "^4.1.1",
    "style-loader": "^0.13.1",
    "url-loader": "^0.5.6",
    "webpack": "^2.3.2",
    "webpack-dev-middleware": "^1.8.4",
    "webpack-hot-middleware": "^2.13.2",
    "webpack-node-externals": "^1.5.4"
  },
  "dependencies": {
    "axios": "^0.15.3",
    "babel-core": "^6.24.0",
    "bootstrap-sass": "^3.3.6",
    "classnames": "^2.2.5",
    "compression": "^1.6.2",
    "core-js": "^2.0.0",
    "dotenv": "^4.0.0",
    "express": "^4.13.4",
    "fbjs": "^0.8.6",
    "font-awesome": "^4.7.0",
    "jquery": "^3.1.1",
    "lodash": "^4.17.4",
    "normalize.css": "^5.0.0",
    "ramda": "^0.23.0",
    "react": "^15.4.2",
    "react-bootstrap": "^0.30.6",
    "react-dom": "^15.4.2",
    "react-redux": "^5.0.2",
    "react-router": "^3.0.0",
    "react-router-bootstrap": "^0.23.1",
    "react-router-redux": "^4.0.7",
    "recompose": "^0.21.2",
    "redux": "^3.5.2",
    "redux-actions": "^1.0.0",
    "redux-auth-wrapper": "^0.9.0",
    "redux-form": "^6.2.1",
    "redux-persist": "^4.0.0-beta1",
    "redux-thunk": "^2.1.0",
    "redux-watch": "^1.1.1",
    "reselect": "^2.5.4"
  },
  "jest": {
    "roots": ["<rootDir>/src"],
    "testEnvironment": "node",
    "verbose": true,
    "testPathIgnorePatterns": [
      "<rootDir>/__tests__/env-setup.js",
      "<rootDir>/node_modules/"
    ],
    "setupTestFrameworkScriptFile": "<rootDir>/__tests__/env-setup.js",
    "moduleNameMapper": {
      "^.+\\.(css|scss)$": "identity-obj-proxy",
      "^.+\\.(ico|jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/src/__mocks__/fileMock.js"
    }
  },
  "lint-staged": {
    "*.{js,jsx}": ["yarn run format", "git add"]
  }
}
